<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>

        <tab id="codegenixuk" translate="label" sortOrder="999">
            <label>Codegenixuk</label>
        </tab>

        <section id="codegenixuk_infinite_scroll" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">

            <class>separator-top</class>

            <label>Infinite Scroll</label>

            <tab>codegenixuk</tab>

            <resource>Codegenixuk_InfiniteScroll::infinite_scroll_config</resource>

            <group id="cg_is_config" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">

                <field id="enable" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Infinite Scroll</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="autoLoad" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Auto Load</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="PrevButtonText" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Previous Button Text</label>
                    <comment>An Image or text cold be used here.</comment>
                </field>

                <field id="NextButtonText" translate="label" type="text" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Next Button Text</label>
                    <comment>An Image or text cold be used here.</comment>
                </field>

            </group>

        </section>

    </system>

</config>

